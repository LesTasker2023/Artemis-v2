{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    
    /* Strict Type Checking */
    "strict": false,  // Disabled for MVP build
    "noImplicitAny": true,
    "strictNullChecks": false,  // Temporarily disabled for build - TODO: add proper null checks
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,  // Requires strictNullChecks
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,  // Temporarily disabled for build
    "noUnusedParameters": false,  // Temporarily disabled for build
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,  // Temporarily disabled for build - TODO: fix optional property types
    
    /* Module Resolution */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./src/core/*"],
      "@infra/*": ["./src/infra/*"],
      "@ui/*": ["./src/ui/*"],
      "@tests/*": ["./tests/*"]
    },
    
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false,
    
    /* Experimental */
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}
